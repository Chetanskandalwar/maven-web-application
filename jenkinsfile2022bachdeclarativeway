pipeline{

agent any

tools{
maven 'maven3.8.6'
}

options {
  timestamps()
   buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5'))
}

triggers {
  pollSCM('* * * * *')
  //cron('* * * * *')
}


//This stage will get the Source from the Github 
stages{
stage('CheckOutCode'){
steps{
  slackNotifications('STARTED')
git branch: 'development', credentialsId: 'fb6eb166-cc04-4905-8c7a-ec8f9bd20e1d', url: 'https://github.com/Chetanskandalwar/maven-web-application.git'
}
}
//This stage will do the build
stage('Build'){
steps{
sh "mvn clean package"
}
}
//This stage will be execute SonarQube Report
stage('ExecuteSonarQubeReport'){
steps{
sh "mvn clean sonar:sonar"
}
}
//This stage will upload the Artifcats into Nexus Repos 
stage ('UploadArtifcatsIntoArtifactoryRepo'){
steps{
sh "mvn clean deploy"
}
}

//Deploy Application Into Tomcat Server
stage('DeployAppIntoTomcatServer')
{
steps{
sshagent(['956026fc-100c-4a71-9175-a043f135c6b5']) {
 sh "scp -o  StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.44.181:/opt/apache-tomcat-9.0.65/webapps/"
}
}
}

}//stages closing

post {
  success {
    slackNotifications(currentBuild.result)
  }
  failure {
    slackNotifications(currentBuild.result)
  }
}

    
}//pipeline closing

//Code Snipped for sending slack notifications.

def slackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    colorName = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    colorName = 'GREEN'
    colorCode = '#00FF00'
  } else {
    colorName = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: "#walmart")
}
